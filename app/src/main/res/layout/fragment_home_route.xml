<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".ui.user.navigation.HomeRoute">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <Toolbar
            android:layout_width="match_parent"
            android:layout_height="50dp">

            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                >

            </RelativeLayout>

        </Toolbar>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            >
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:id="@+id/header"
                android:background="@color/primary"
                >
            </RelativeLayout>
            <View
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:id="@+id/anchor"
                android:layout_alignBottom="@+id/header"
                />
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:padding="20dp"
                android:layout_alignTop="@id/anchor"
                android:background="@drawable/curved_background_drawable"
                android:orientation="vertical"
                >
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"

                    >
                    <View
                        android:layout_width="10dp"
                        android:id="@+id/divider"
                        android:layout_centerInParent="true"
                        android:layout_height="1dp"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Transfer Cash"
                        android:layout_alignParentEnd="true"
                        android:layout_toEndOf="@+id/divider"
                        />
                    <Button
                        android:layout_width="wrap_content"
                        android:layout_height="wrap_content"
                        android:text="Receive Payment"
                        android:layout_alignParentStart="true"
                        android:layout_toStartOf="@+id/divider"
                        />

                </RelativeLayout>
                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:text="You have no Transactions"
                    />
                <androidx.recyclerview.widget.RecyclerView
                    android:layout_width="match_parent"
                    android:layout_marginTop="20dp"
                    android:id="@+id/recentTransactionRecyclerView"
                    android:layout_height="match_parent"
                    />
            </LinearLayout>
        </RelativeLayout>
    </LinearLayout>

</FrameLayout>